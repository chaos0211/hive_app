    <value>true</value>
  </property>
  <property>
    <name>hive.exec.dynamic.partition.mode</name>
    <value>nonstrict</value>
  </property>
  <property>
    <name>spark.sql.warehouse.dir</name>
    <value>file:///Users/chaos/Documents/science/2025.8/hive_app/hive-warehouse</value>
